<%= link_to(@firstformmath.title, @firstformmath.url, target: "_blank") %><br/>
<small>Submitted <%= time_ago_in_words(@firstformmath.created_at) %> ago</small>

<h3>Comments</h3>

<%= form_for [@firstformmath, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @firstformmath.comments) %>
</ul>